pipeline {
    agent any
    tools {
        maven 'Maven 3.6.1'
    }
    stages {
        stage('build') {
            when {
                changeset '**/worker/**'
            }
            steps {
                echo "Compiling work app"
                dir('worker') {
                    sh 'mvn compile'
                }
            }
        }
        stage('test') {
            when {
                branch 'master'
                changeset '**/worker/**'
            }
            steps {
                echo 'Running unit tests on work app'
                dir('worker') {
                    sh 'mvn clean test'

                }
            }
        }

        stage('package') {
            when {
                branch 'master'
                changeset '**/worker/**'
            }
            steps {
                echo 'Packaging worker app'
                dir('worker') {
                    sh 'mvn package -DskipTests'
                    archiveArtifacts artifacts: 'worker/target/*.jar', fingerprint: true
                }
            }
        }
    }

    post {
        always {
            echo 'Buil pipeline for worker is complete'
        }
    }
}