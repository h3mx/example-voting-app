pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                echo 'Building npm application'
                dir('result') {
                    nodejs(nodeJSInstallationName: 'NodeJS 8.9.0') {
                        sh 'npm install'
                    }
                }
            }
        }
        stage('test') {
            steps {
                echo 'Testing npm application'
                dir('result') {
                    nodejs(nodeJSInstallationName: 'NodeJS 8.9.0') {
                        sh 'npm test'
                    }
                }
            }
        }
    }
    post {
        always {
            echo 'Building and testing npm application succesfully'
        }
    }
}